	: $(HAIKU_APPLE_ALUMINUM_KEYBOARD_LAYOUT_FILES) ;
AddFilesToPackage data KeyboardLayouts ThinkPad
	: $(HAIKU_THINKPAD_KEYBOARD_LAYOUT_FILES) ;

