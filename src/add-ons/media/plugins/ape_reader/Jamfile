SubDir FUSION_TOP src add-ons media plugins ape_reader ;

UsePrivateHeaders media ;
UsePrivateHeaders [ FDirName media experimental ] ;

SubDirHdrs [ FDirName $(SUBDIR) ../LibMonkeysAudio ] ;

SubDirHdrs [ FDirName $(SUBDIR) LibMonkeysAudio ] ;
SubDirHdrs [ FDirName $(SUBDIR) MAClib ] ;

local architectureObject ;
for architectureObject in [ MultiArchSubDirSetup ] {
	on $(architectureObject) {
		Addon [ MultiArchDefaultGristFiles ape_reader ] :
			APEReader.cpp
			: [ MultiArchDefaultGristFiles libMonkeysAudio.a MAClib.a ]
			be media [ TargetLibsupc++ ]
		;
	}
}

SubInclude FUSION_TOP src add-ons media plugins ape_reader LibMonkeysAudio ;
SubInclude FUSION_TOP src add-ons media plugins ape_reader MAClib ;
