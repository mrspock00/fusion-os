	main.cpp
	: be [ TargetLibstdc++ ] [ TargetLibsupc++ ] ;

if ( $(TARGET_PLATFORM) = libbe_test ) {
	HaikuInstall install-test-apps : $(HAIKU_APP_TEST_DIR) : TextRendering
		: tests!apps ;
}
